<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeedFragment">

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="#FAFAFA"
        app:layout_constraintTop_toBottomOf="@id/frameLayout">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="875dp"
            android:layout_height="180dp"
            android:layout_marginStart="5dp"
            android:text="@string/btpit_text"
            android:textColor="#5C5C5C"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:translationX="5dp"
            android:translationY="150dp"
            app:srcCompat="@drawable/img_1" />


    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:background="#FAFAFA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="#00FFFFFF"
            android:scaleType="centerCrop"
            android:src="@drawable/threedots"
            android:translationX="875dp"
            android:translationY="10dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="88dp"
            android:layout_height="57dp"
            android:translationX="20dp"
            android:translationY="8dp"

            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/header"
            android:textSize="10dp"
            android:translationX="115dp"
            android:translationY="20dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time"
            android:textSize="10dp"
            android:translationX="115dp"
            android:translationY="38dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="-30dp"
        android:background="#FAFAFA"
        app:layout_constraintTop_toBottomOf="@id/frameLayout2">

        <ImageButton
            android:id="@+id/share"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:backgroundTint="#00FFFFFF"
            android:scaleType="centerCrop"
            android:src="@drawable/share"
            android:translationX="85dp"
            android:translationY="10dp" />

        <ImageButton
            android:id="@+id/like"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:backgroundTint="#00FFFFFF"
            android:scaleType="centerCrop"
            android:src="@drawable/img"
            android:translationX="20dp"
            android:translationY="10dp" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="16dp"
            android:layout_height="11dp"
            android:backgroundTint="#00FFFFFF"
            android:scaleType="centerCrop"
            android:src="@drawable/eye"
            android:translationX="860dp"
            android:translationY="15dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="27dp"
            android:layout_height="22dp"
            android:text="150"
            android:textColor="#5C5C5C"
            android:textSize="12dp"
            android:translationX="890dp"
            android:translationY="15dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="27dp"
            android:layout_height="22dp"
            android:text="150"
            android:textColor="#5C5C5C"
            android:textSize="12dp"
            android:translationX="60dp"
            android:translationY="20dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="40dp"
            android:layout_height="22dp"
            android:text="150"
            android:textColor="#5C5C5C"
            android:textSize="12dp"
            android:translationX="130dp"
            android:translationY="20dp" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>